pipeline {
    agent any

    environment {
        IMAGE_NAME = "apache-web"
        IMAGE_TAG  = "${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Priya-Joshi03/apache-docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t $IMAGE_NAME:$IMAGE_TAG .
                '''
            }
        }

        stage('Verify Image') {
            steps {
                sh 'docker images | grep apache-web'
            }
        }
        stage('Trigger Hub Pipeline') {
            when {
                expression { currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                build job: 'Jenkinsfile-hub', parameters: [
                    string(name: 'IMAGE_TAG', value: "${IMAGE_TAG}")
                ]
            }
        }

    }
}
