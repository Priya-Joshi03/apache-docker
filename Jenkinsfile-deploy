pipeline {
    agent any

    parameters {
        string(
            name: 'IMAGE_TAG',
            description: 'Docker image tag passed from build pipeline'
        )
    }

    environment {
        IMAGE_NAME     = "priyajoshi032/apache-web"
        CONTAINER_NAME = "apache-container"
    }

    stages {

        stage('Pull Image') {
            steps {
                sh '''
                docker pull $IMAGE_NAME:$IMAGE_TAG
                '''
            }
        }

        stage('Stop Old Container') {
            steps {
                sh '''
                docker rm -f $CONTAINER_NAME || true
                '''
            }
        }

        stage('Run Apache Container') {
            steps {
                sh '''
                docker run -d \
                --name $CONTAINER_NAME \
                -p 8081:80 \
                --restart always \
                $IMAGE_NAME:$IMAGE_TAG
                '''
            }
        }

        stage('Verify Container') {
            steps {
                sh '''
                docker ps | grep $CONTAINER_NAME
                '''
            }
        }
    }
}
